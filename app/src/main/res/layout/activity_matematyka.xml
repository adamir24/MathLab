<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatematykaActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/obrazMatematyka"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            app:srcCompat="@drawable/math" />

        <Button
            android:id="@+id/przyciskFunkcje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funkcje" />

        <Button
            android:id="@+id/przyciskGeometria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geometria" />

        <Button
            android:id="@+id/przyciskWielomiany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wielomiany" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>